{
  "compilerOptions": {
    "declaration": true,
    "target": "es2019",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist/",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "lib": ["esnext"]
  },
  "exclude": ["example", "node_modules", "dist", "coverage", "test"]
}
